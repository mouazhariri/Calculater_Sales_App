<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Toolbar with Back Arrow on Right -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp">

        <!-- Title in the Center -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_gravity="center"
            android:text="تفاصيل المندوب"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <!-- Back Arrow on Right -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:paddingEnd="10dp"
            android:contentDescription="Back"
            android:layout_gravity="end|center_vertical" />
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
    <!-- Representative Image -->
    <ImageView
        android:id="@+id/ivRepImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="صورة المندوب" />


    <!-- Representative Name -->
    <TextView
        android:id="@+id/tvRepName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اسم المندوب: "
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000" />
<Space
    android:layout_width="wrap_content"
    android:layout_height="25dp"/>
    <!-- Phone Number -->
    <TextView
        android:id="@+id/tvRepPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="رقم الهاتف: "
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="25dp"/>
    <!-- Region -->
    <TextView
        android:id="@+id/tvRepRegion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="المنطقة: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="25dp"/>
    <!-- Buttons for Delete and Edit -->
    <Button
        android:id="@+id/btnEditRep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تعديل"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnDeleteRep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="حذف"
        android:backgroundTint="#F44336"
        android:textColor="#FFFFFF" />
</LinearLayout>
</LinearLayout>
